        <div class="d-flex d-lg-none align-items-center">
          <!-- Custom hamburger menu icon for mobile -->
          <button
            id="navbarToggler"
            class="navbar-toggler burger-menu-icon"
            type="button"
            aria-controls="fullscreenMenu"
