<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="referrer" content="no-referrer" />

    <!-- Primary Meta Tags -->
    <title><%= title %></title>
    <meta name="title" content="<%= title %>" />
    <meta name="description" content="<%= metaDescription %>" />
    <meta
      name="keywords"
      content="jailbreak trading, roblox jailbreak values, jailbreak trade details, jailbreak trade advertisement, roblox jailbreak trading"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= canonicalUrl %>" />
    <meta property="og:title" content="<%= title %>" />
    <meta property="og:description" content="<%= metaDescription %>" />
    <meta property="og:image" content="<%= logoUrl %>" />
    <meta property="og:image:width" content="4000" />
    <meta property="og:image:height" content="900" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="<%= canonicalUrl %>" />
    <meta property="twitter:title" content="<%= title %>" />
    <meta property="twitter:description" content="<%= metaDescription %>" />
    <meta property="twitter:image" content="<%= logoUrl %>" />

    <!-- Canonical -->
    <link rel="canonical" href="<%= canonicalUrl %>" />

    <base href="/" />

    <!-- Stylesheets -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/trading.css" />
    <link rel="stylesheet" href="/styles/comments.css" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bangers&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Luckiest+Guy&family=Merriweather+Sans:ital,wght@0,300..800;1,300..800&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Oswald:wght@200..700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css"
      integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>

  <body>
    <%- include('partials/nav') %> <%- include('partials/announcement') %> <%-
    include('partials/loading') %>
    <div class="container mt-4">
      <!-- Breadcrumbs -->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <!-- Will be populated by JavaScript -->
        </ol>
      </nav>

      <!-- Main content container -->
      <div class="trade-content">
        <!-- Trade Details -->
        <div class="trade-ad-detail">
          <div class="trade-ad">
            <!-- Author Info -->
            <div class="trader-info">
              <!-- Will be populated by JavaScript -->
            </div>

            <!-- Trade Items -->
            <div class="trade-sides-container">
              <!-- Offering Side -->
              <div class="trade-side offering">
                <div class="trade-side-label">Offering</div>
                <div class="trade-items-grid">
                  <!-- Will be populated by JavaScript -->
                </div>
                <div class="side-total">
                  <!-- Will be populated by JavaScript -->
                </div>
              </div>

              <!-- Requesting Side -->
              <div class="trade-side requesting">
                <div class="trade-side-label">Requesting</div>
                <div class="trade-items-grid">
                  <!-- Will be populated by JavaScript -->
                </div>
                <div class="side-total">
                  <!-- Will be populated by JavaScript -->
                </div>
              </div>
            </div>

            <!-- Trade Footer -->
            <div class="trade-ad-footer">
              <div class="trade-timestamp">
                <i class="bi bi-clock"></i>
                <span class="timestamp">
                  <!-- Will be populated by JavaScript -->
                </span>
              </div>
              <div class="trade-status">
                <!-- Will be populated by JavaScript -->
              </div>
            </div>

            <div class="trade-actions mt-3">
              <!-- Will be populated by JavaScript -->
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <%- include('partials/comments', { type: 'trade', itemId: tradeId }) %>
    </div>
    <%- include('partials/footer') %>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Toastr (For Notifications) -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"
      integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="scripts/main.js"></script>
    <script src="/scripts/comments.js"></script>
    <script src="/scripts/trade-ad.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.5/dist/js.cookie.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
  </body>
</html>
