<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="google-adsense-account" content="ca-pub-8152532464536367" />
    <title>Bot Invite</title>
    <link rel="canonical" href="https://testing.jailbreakchangelogs.xyz/botinvite" />
    
    <link rel="stylesheet" href="styles/botinvite.css" 
    <script src="scripts/main.js"></script>

    <script>
      // Initialize countdown value
      let countdownValue = 3;

      // Function to update the countdown display and redirect when it reaches zero
      function startCountdown() {
        const countdownElement = document.getElementById("countdown");
        const countdownInterval = setInterval(() => {
          // Update the countdown display
          countdownElement.textContent = countdownValue;
          countdownValue--;

          // Redirect to the Discord bot invite page once countdown reaches zero
          if (countdownValue < 0) {
            clearInterval(countdownInterval);
            window.location.href = "https://discord.com/application-directory/1281308669299920907";
          }
        }, 1000);
      }

      // Start the countdown once the document is fully loaded
      document.addEventListener("DOMContentLoaded", startCountdown);
    </script>
  </head>
  <body>
    <div class="container">
      <h1>Invite Jailbreak Changelogs Bot</h1>
      <p>
        You will be redirected to the bot invite page on Discord in
        <span id="countdown">3</span> seconds...
      </p>
      <p>
        <a href="https://discord.com/application-directory/1281308669299920907" target="_blank">Click here</a> if you are not redirected automatically.
      </p>
    </div>
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8152532464536367"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
