<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="referrer" content="no-referrer" />

    <base href="/" />

    <!-- Primary Meta Tags -->
    <meta
      name="title"
      content="Jailbreak Season <%= season %> | <%= title %>"
    />
    <meta name="author" content="Jailbreak Changelogs" />
    <meta
      name="description"
      content="Explore Jailbreak Season <%= season %>: <%= title %>. Track seasonal rewards, exclusive vehicles, limited-time items, and progression milestones for Roblox Jailbreak Season <%= season %>."
    />
    <meta
      name="keywords"
      content="Jailbreak Season <%= season %>, <%= title %>, Roblox Jailbreak, seasonal rewards, exclusive vehicles, limited items, game progression, seasonal content, Jailbreak updates, seasonal milestones, game events"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Jailbreak Changelogs" />
    <meta
      property="og:url"
      content="https://testing.jailbreakchangelogs.xyz/seasons/<%= season %>"
    />
    <meta
      property="og:title"
      content="Jailbreak Season <%= season %> | <%= title %>"
    />
    <meta
      property="og:description"
      content="Explore Jailbreak Season <%= season %>: <%= title %>. Track seasonal rewards, unlock exclusive items, and discover all rewards in this limited-time event!"
    />
    <meta property="og:image" content="<%= image_url %>" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:url"
      content="https://testing.jailbreakchangelogs.xyz/seasons/<%= season %>"
    />
    <meta
      name="twitter:title"
      content="Jailbreak Season <%= season %> | <%= title %>"
    />
    <meta
      name="twitter:description"
      content="Explore Jailbreak Season <%= season %>: <%= title %>. Track seasonal rewards, unlock exclusive items, and discover all rewards in this limited-time event!"
    />
    <meta name="twitter:image" content="<%= image_url %>" />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="theme-color" content="#2e3944" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />

    <!-- Canonical URL -->
    <link
      rel="canonical"
      href="https://testing.jailbreakchangelogs.xyz/seasons/<%= season %>"
    />

    <title>Jailbreak Season <%= season %> | <%= title %></title>

    <!-- Stylesheets -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <link rel="stylesheet" href="styles/seasons.css" />
    <link rel="stylesheet" href="styles/main.css" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bangers&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Luckiest+Guy&family=Merriweather+Sans:ital,wght@0,300..800;1,300..800&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Oswald:wght@200..700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css"
      integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <!-- prettier-ignore -->
  <%- include('partials/nav') %>
  <%- include('partials/newsticker') %>

  <body data-scroll-container>
    <!-- Loading Overlay -->
    <!-- This overlay is shown while the page is loading -->
    <div id="loading-overlay" class="show">
      <div class="text-center">
        <img
          src="https://cdn.jailbreakchangelogs.xyz/logos/Jailbreak_Logo.webp"
          alt="Loading logo"
          class="loading-logo"
        />
      </div>
      <div class="d-flex justify-content-center mt-3">
        <div class="spinner-border custom-spinner" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
    </div>

    <!-- Seasons Button Container -->
    <div class="container-fluid mt-3">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/seasons">Seasons</a></li>
          <li
            class="breadcrumb-item active season-breadcrumb"
            aria-current="page"
          ></li>
        </ol>
      </nav>
      <div class="row">
        <div class="col-12 col-lg-8">
          <!-- This aligns with the content wrapper width -->
          <div class="row">
            <div class="col-auto">
              <div class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle btn btn-primary custom-dropdown-btn"
                  href="#"
                  id="changelogDropdown"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  <i class="bi bi-calendar-event me-2"></i>View Seasons
                </a>
                <ul
                  class="dropdown-menu changelog-dropdown w-100"
                  id="seasonList"
                  aria-labelledby="changelogDropdown"
                >
                  <!-- Dropdown items will be populated dynamically by JavaScript -->
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Container -->
    <div id="main-container" class="container-fluid">
      <div id="content-wrapper" class="row mt-3">
        <!-- Season Details Section -->
        <section id="content" class="d-flex flex-grow-1">
          <div id="season-details" class="col-12">
            <!-- Season description and rewards will be dynamically inserted here by JavaScript -->
          </div>
        </section>

        <!-- Rewards Carousel Section -->
        <div class="col-12 col-sm-4 col-md-4" id="sidebar-image-wrapper">
          <!-- Carousel Image -->
          <div
            id="rewardsCarousel"
            class="carousel slide"
            data-bs-ride="carousel"
          >
            <div class="carousel-inner" id="carousel-inner">
              <!-- Carousel items will be dynamically inserted here by JavaScript -->
            </div>
            <!-- Carousel Navigation Buttons -->
            <button
              class="carousel-control-prev"
              type="button"
              data-bs-target="#rewardsCarousel"
              data-bs-slide="prev"
            >
              <span
                class="carousel-control-prev-icon"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button
              class="carousel-control-next"
              type="button"
              data-bs-target="#rewardsCarousel"
              data-bs-slide="next"
            >
              <span
                class="carousel-control-next-icon"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

          <!-- Comment Section -->
          <div class="comment-container my-5">
            <h2 class="comment-header" id="comment-header">Comments</h2>
            <div class="row justify-content-center">
              <div class="col-md-12">
                <!-- Comment submission form -->
                <form id="comment-form" class="mb-4">
                  <div class="input-group">
                    <input
                      type="text"
                      class="form-control"
                      id="commenter-text"
                      disabled
                      placeholder="Login to comment"
                      required
                    />
                    <button
                      type="submit"
                      class="btn btn-primary"
                      id="submit-comment"
                      disabled
                    >
                      <i class="bi bi-send-fill me-1"></i> Submit
                    </button>
                  </div>
                </form>

                <!-- Comment List -->
                <ul id="comments-list" class="list-group shadow-sm">
                  <!-- Comments will be dynamically added here -->
                </ul>
                <div
                  id="paginationControls"
                  class="pagination d-flex align-items-center"
                ></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>
    <!-- jQuery -->
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>

    <!-- Bootstrap Bundle -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <!-- Toastr -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"
      integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>

    <!-- Custom scripts -->
    <script src="scripts/main.js"></script>
    <script src="scripts/seasons.js"></script>

    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8152532464536367"
      crossorigin="anonymous"
    ></script>
    <script
      async
      src="https://fundingchoicesmessages.google.com/i/pub-8152532464536367?ers=1"
    ></script>
    <script>
      (function () {
        function signalGooglefcPresent() {
          if (!window.frames["googlefcPresent"]) {
            if (document.body) {
              const iframe = document.createElement("iframe");
              iframe.style =
                "width: 0; height: 0; border: none; z-index: -1000; left: -1000px; top: -1000px;";
              iframe.style.display = "none";
              iframe.name = "googlefcPresent";
              document.body.appendChild(iframe);
            } else {
              setTimeout(signalGooglefcPresent, 0);
            }
          }
        }
        signalGooglefcPresent();
      })();
    </script>
  </body>
</html>
