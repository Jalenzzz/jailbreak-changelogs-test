      <!-- Hero Section -->
      <div class="container-fluid mt-4">
        <div class="row">
          <div class="col-12">
            <div class="intro-container hero-style p-4 rounded shadow-sm">
              <div class="hero-overlay"></div>
              <div class="row position-relative">
                <div class="col-12 col-lg-8">
                  <div class="hero-content">
                    <h1 class="display-5 mb-3 text-shadow">
                      Roblox Jailbreak Trading Hub
                    </h1>
                    <p class="lead mb-4 text-shadow">
                      Create trade advertisements for your Roblox Jailbreak
                      items or browse existing trade ads from other players.
                      Find the perfect trades and connect with the trading
                      community.
                    </p>
                    <div class="features mb-4">
                      <div class="feature-item mb-2">
                        <i class="bi bi-shield-check me-2"></i>
                        <span class="text-shadow"
                          >Real-time value tracking for safe trading</span
                        >
                      </div>
                      <div class="feature-item mb-2">
                        <i class="bi bi-graph-up me-2"></i>
                        <span class="text-shadow"
                          >Instant value calculations for both sides</span
                        >
                      </div>
