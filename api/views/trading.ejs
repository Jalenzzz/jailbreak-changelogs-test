    <!-- Modal for Available Items -->
    <div
      class="modal fade"
      id="availableItemsModal"
      tabindex="-1"
      aria-labelledby="availableItemsModalLabel"
      aria-hidden="true"
    >
      <div
        class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable"
      >
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="availableItemsModalLabel">
              Select Item
            </h5>
            <div class="d-flex gap-2 align-items-center">
              <select
                id="modal-value-sort-dropdown"
                class="form-select"
                onchange="sortModalItems()"
              >
                <option value="name-all-items">All Items</option>
                <option value="name-limited-items">Limited Items</option>
                <option value="name-vehicles">Vehicles</option>
                <option value="name-spoilers">Spoilers</option>
                <option value="name-rims">Rims</option>
                <option value="name-body-colors">Body Colors</option>
                <option value="name-hyperchromes">HyperChromes</option>
                <option value="name-textures">Body Textures</option>
                <option value="name-tire-stickers">Tire Stickers</option>
                <option value="name-tire-styles">Tire Styles</option>
                <option value="name-drifts">Drifts</option>
                <option value="name-furnitures">Furniture</option>
              </select>

              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
          </div>
          <div class="modal-body">
            <div class="search-container mb-3">
              <i class="bi bi-search search-icon"></i>
              <input
                type="text"
                id="modal-item-search"
                class="search-input"
                placeholder="Search items..."
                oninput="handleSearch(currentTradeType)"
              />
            </div>
            <div id="modal-pagination-top"></div>
            <div class="row" id="modal-available-items-list"></div>
            <div id="modal-pagination-bottom"></div>
          </div>
        </div>
      </div>
