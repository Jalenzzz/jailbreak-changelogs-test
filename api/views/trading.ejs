        <div class="col-lg-6">
          <h3 class="text-center">Offering</h3>
          <div class="row" id="offering-list"></div>
        </div>

        <div class="col-lg-6">
          <h3 class="text-center">Requesting</h3>
          <div class="row" id="requesting-list"></div>
        </div>
      </div>

      <!-- Trade Preview Section -->
      <div class="container-fluid mt-4">
        <div class="trade-preview" id="trade-preview" style="display: none">
          <div class="container">
            <h3 class="text-center mb-4">Trade Preview</h3>
            <div class="row">
              <div class="col-lg-6">
                <div class="preview-side">
                  <h4 class="text-center">Offering</h4>
                  <div
                    class="preview-items-grid"
                    id="preview-offering-items"
                  ></div>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="preview-side">
                  <h4 class="text-center">Requesting</h4>
                  <div
                    class="preview-items-grid"
                    id="preview-requesting-items"
                  ></div>
                </div>
              </div>
            </div>
            <div class="preview-actions mt-4 text-center">
              <button class="btn btn-primary" onclick="createTradeAd()">
                <i class="bi bi-plus-circle me-2"></i>Create Trade Ad
              </button>
              <button class="btn btn-secondary ms-2" onclick="editTrade()">
                <i class="bi bi-pencil me-2"></i>Edit Trade
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Available Items Container -->
      <div class="available-items mt-4" id="available-items-container">
        <div class="d-flex justify-content-center mb-4">
          <button
            class="btn btn-success btn-lg"
            id="confirm-trade-btn"
            onclick="previewTrade()"
          >
            <i class="bi bi-check-circle me-2"></i>Preview Trade Ad
          </button>
        </div>
      </div>

      <!-- Trade Ads Section -->
      <div class="trade-ads-section">
        <h3>
          <i class="bi bi-clock-history me-2"></i>Recent Trade Advertisements
        </h3>

        <div id="trade-ads-loading" class="trade-ads-loading">
          <div class="loading-spinner"></div>
          <p>Loading trade advertisements...</p>
        </div>
      </div>

      <!-- Trade Summary Section -->
      <div class="row mt-4">
        <div class="col-12">
          <div id="trade-summary"></div>
        </div>
      </div>
