<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="referrer" content="no-referrer" />

    <!-- Primary Meta Tags -->
    <title><%= title %></title>
    <meta name="title" content="<%= title %>" />
    <meta
      name="description"
      content="Calculate Jailbreak item values and determine trade fairness with our value calculator."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content="https://testing.jailbreakchangelogs.xyz/values/calculator"
    />
    <meta property="og:title" content="<%= title %>" />
    <meta
      property="og:description"
      content="Calculate Jailbreak item values and determine trade fairness with our value calculator."
    />
    <meta property="og:image" content="<%= logoUrl %>" />

    <!-- Stylesheets -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <link rel="stylesheet" href="/styles/calculator.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&family=Montserrat:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- prettier-ignore -->
    <%- include('partials/nav') %>
    <%- include('partials/announcement') %>

    <!-- Breadcrumb Navigation -->
    <div class="container-fluid mt-3">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/values">Values</a></li>
          <li class="breadcrumb-item active" aria-current="page">Calculator</li>
        </ol>
      </nav>
    </div>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card calculator-card">
            <div class="card-header">
              <h2 class="text-center mb-0">Value Calculator</h2>
            </div>
            <div class="card-body">
              <form id="calculator-form">
                <div class="mb-4">
                  <label for="cashValue" class="form-label">Cash Value</label>
                  <div class="input-group">
                    <input
                      type="number"
                      class="form-control"
                      id="cashValue"
                      placeholder="Enter cash value"
                    />
                    <button
                      class="btn btn-outline-secondary"
                      type="button"
                      onclick="clearValue('cashValue')"
                    >
                      <i class="bi bi-x-lg"></i>
                    </button>
                  </div>
                </div>

                <div class="mb-4">
                  <label for="dupedValue" class="form-label">Duped Value</label>
                  <div class="input-group">
                    <input
                      type="number"
                      class="form-control"
                      id="dupedValue"
                      placeholder="Enter duped value"
                    />
                    <button
                      class="btn btn-outline-secondary"
                      type="button"
                      onclick="clearValue('dupedValue')"
                    >
                      <i class="bi bi-x-lg"></i>
                    </button>
                  </div>
                </div>

                <div class="d-grid">
                  <button type="submit" class="btn btn-primary">
                    <i class="bi bi-calculator"></i> Calculate
                  </button>
                </div>
              </form>

              <div id="results" class="mt-4" style="display: none">
                <h4 class="text-center">Results</h4>
                <div class="table-responsive">
                  <table class="table">
                    <tr>
                      <td>Cash Value:</td>
                      <td id="originalCash" class="text-end">-</td>
                    </tr>
                    <tr>
                      <td>Duped Value:</td>
                      <td id="originalDuped" class="text-end">-</td>
                    </tr>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/main.js"></script>
    <script>
      function clearValue(id) {
        document.getElementById(id).value = "";
      }

      function formatNumber(num) {
        if (num >= 1000000) {
          return (num / 1000000).toFixed(2) + "M";
        } else if (num >= 1000) {
          return (num / 1000).toFixed(2) + "K";
        }
        return num.toLocaleString();
      }

      document
        .getElementById("calculator-form")
        .addEventListener("submit", function (e) {
          e.preventDefault();

          const cashValue =
            parseFloat(document.getElementById("cashValue").value) || 0;
          const dupedValue =
            parseFloat(document.getElementById("dupedValue").value) || 0;

          // Display results
          document.getElementById("results").style.display = "block";
          document.getElementById("originalCash").textContent =
            formatNumber(cashValue);
          document.getElementById("originalDuped").textContent =
            formatNumber(dupedValue);
        });
    </script>
  </body>
</html>
