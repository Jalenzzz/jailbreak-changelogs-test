<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="referrer" content="no-referrer" />

    <!-- Primary Meta Tags -->
    <title><%= title %></title>
    <meta name="title" content="<%= title %>" />
    <meta
      name="description"
      content="Calculate Jailbreak item values and determine trade fairness with our value calculator."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content="https://testing.jailbreakchangelogs.xyz/values/calculator"
    />
    <meta property="og:title" content="<%= title %>" />
    <meta
      property="og:description"
      content="Calculate Jailbreak item values and determine trade fairness with our value calculator."
    />
    <meta property="og:image" content="<%= logoUrl %>" />

    <!-- Stylesheets -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <link rel="stylesheet" href="/styles/calculator.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&family=Montserrat:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body data-scroll-container>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KM853GJ6"
      height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
      <!-- End Google Tag Manager (noscript) -->
    <!-- prettier-ignore -->
    <%- include('partials/nav') %>
    <%- include('partials/announcement') %>

    <!-- Main Trading Section -->
    <div id="main-container" class="container-fluid">
      <div class="container-fluid mt-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Trading</li>
          </ol>
        </nav>
      </div>
      <div class="row mt-3">
        <!-- Offering Section -->
        <div class="col-lg-6">
          <h3 class="text-center">Offering</h3>
          <div class="row" id="offering-list">
            <!-- Placeholder items will be rendered here -->
          </div>
        </div>

        <!-- Requesting Section -->
        <div class="col-lg-6">
          <h3 class="text-center">Requesting</h3>
          <div class="row" id="requesting-list">
            <!-- Placeholder items will be rendered here -->
          </div>
        </div>
      </div>

      <!-- Shared Available Items Section -->
      <div class="available-items mt-4" id="available-items-container">
        <!-- Remove the toggle buttons div and replace with confirm trade button -->
        <div class="d-flex justify-content-center mb-4">
          <button
            class="btn btn-success btn-lg"
            id="confirm-trade-btn"
            onclick="previewTrade()"
          >
            <i class="bi bi-check-circle me-2"></i>Confirm Trade
          </button>
        </div>

        <div id="available-items-list">
          <!-- Available items will be rendered here -->
        </div>
      </div>

      <!-- Trade Preview Container -->
      <div id="trade-preview-container" class="mt-4" style="display: none">
        <h4 class="text-center mb-3">Trade Preview</h4>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <h5>Offering</h5>
                <div id="preview-offering-items" class="preview-items"></div>
              </div>
              <div class="col-md-6">
                <h5>Requesting</h5>
                <div id="preview-requesting-items" class="preview-items"></div>
              </div>
            </div>
            <div class="mt-3 text-center">
              <button class="btn btn-primary me-2" onclick="editTrade()">
                <i class="bi bi-pencil me-2"></i>Edit Trade
              </button>
              <button class="btn btn-success" onclick="submitTrade()">
                <i class="bi bi-upload me-2"></i>Post Trade
              </button>
            </div>
          </div>
        </div>
      </div>

      <div id="top-pagination"></div>

      <div class="row" id="available-items-list">
        <!-- Available items will be rendered here -->
      </div>

      <div id="bottom-pagination"></div>
    </div>

    <!-- Trade Summary Section -->
    <div class="row mt-4">
      <div class="col-12">
        <div id="trade-summary">
          <!-- Trade summary will be rendered here -->
        </div>
      </div>
    </div>
  </div>

  <!-- Add Modal for Available Items -->
  <div
    class="modal fade"
    id="availableItemsModal"
    tabindex="-1"
    aria-labelledby="availableItemsModalLabel"
    aria-hidden="true"
  >
    <div
      class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable"
    >
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="availableItemsModalLabel">
            Select Item
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="search-container mb-3">
            <i class="bi bi-search search-icon"></i>
            <input
              type="text"
              id="modal-item-search"
              class="search-input"
              placeholder="Search items..."
              oninput="handleSearch(currentTradeType)"
            />
          </div>
          <div id="modal-pagination-top"></div>
          <div class="row" id="modal-available-items-list">
            <!-- Available items will be rendered here -->
          </div>
          <div id="modal-pagination-bottom"></div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <!-- Scripts -->
  <script
    src="https://code.jquery.com/jquery-3.7.1.min.js"
    integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
    crossorigin="anonymous"
  ></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
  <script src="/scripts/main.js"></script>
  <script src="/scripts/trading.js" defer></script>
</body>
</html>
