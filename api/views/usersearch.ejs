    <%- include('partials/nav') %>
    <%- include('partials/announcement') %>

    <div style="background-color: #2e3944; color: white; padding: 20px 0">
      <div class="container">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">User Search</li>
          </ol>
        </nav>
        
        <div class="container px-3">
          <div class="text-center mb-3">
            <h1 class="fs-3 fw-bold">
              <i class="bi bi-people-fill me-2"></i>User Search
            </h1>
            <p class="text-muted small mb-2">Find users by their username or display name</p>
          </div>
          
          <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
              <div class="search-box shadow-sm p-2 mb-3" style="background-color: #212a31;">
                <div class="input-group">
                  <span class="input-group-text">
                    <i class="bi bi-search"></i>
                  </span>
                  <input
                    type="text"
                    id="searchInput"
                    placeholder="Search for a user..."
                    class="form-control ps-0"
                    autocomplete="off"
                  />
                  <button class="btn btn-outline-secondary" id="clearButton" type="button" style="display: none;">
                    <i class="bi bi-x-lg"></i>
                  </button>
                  <button class="btn btn-primary px-3" id="searchButton">
                    <i class="bi bi-arrow-right"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>          
        </div>
        
          <div class="row justify-content-center">
            <div class="col-12">
              <div id="user-results" class="results-container fade-in" style="display: none; background-color: #212A31; padding: 1.5rem;">
                <div id="loading-spinner" class="loading-spinner" style="display: none;">
                  <div class="custom-spinner"></div>
                </div> 
                <div id="usersGrid" class="user-grid">
                </div>
              </div>
            </div>
          </div>
          
          
        </div>
        
        
      </div>
    </div>

